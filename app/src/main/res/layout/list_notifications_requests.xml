                         android:textSize="@dimen/font_small" />-->

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:maxLines="2"
                        android:padding="@dimen/dimen_5"
                        android:text="daffsaffafafafa"
                        android:textColor="@color/pickup_dropOff_address"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/tv_drop_off"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:maxLines="2"
                        android:padding="@dimen/dimen_5"
                        android:text="afafafafafa"
                        android:textColor="@color/pickup_dropOff_address"
                        android:textSize="@dimen/font_normal" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/slidingBorderColor"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>


            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_marginBottom="@dimen/dimen_2"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30">

                <TextView
                    android:id="@+id/tv_package_status_label"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textColor="@color/slidingFontColor"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_package_status"
                    android:layout_toRightOf="@+id/tv_package_status_label"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#008A62"
                    android:textSize="@dimen/font_small" />

            </RelativeLayout>>




























